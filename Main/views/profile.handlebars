<div class="profile">
    <h1>Your Profile</h1>
    <nav>
        <a href="/">Home</a>
        <a href="/logout">Logout</a>
    </nav>
    <div class="journal">
        <h2>Your Journal</h2>
        {{#each posts}}
            <div class="journal">
                <h3>{{title}}</h3>
                <p>Posted on {{dateCreated}}</p>
                <a href="/journals/{{id}}/edit">Edit</a>
                <button class="delete-journal" data-id="{{id}}">Delete</button>
            </div>
        {{else}}
            <p>You have no posts yet.</p>
        {{/each}}
        <button id="new-journal">Add New Journal</button>
    </div>
</div>