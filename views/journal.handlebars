<div class="journal">
    <h2>{{title}}</h2>
    <p>By {{creator}} on {{dateCreated}}</p>
    <div class="journal-content">
        {{{content}}}
    </div>
    <div class="comments">
        <h3>Comments</h3>
        {{#each comments}}
            <div class="comment">
                <p><strong>{{creator}}</strong> on {{dateCreated}}: {{{text}}}</p>
            </div>
        {{/each}}
        {{#if loggedIn}}
            <form id="comment-form">
                <textarea username="comment" placeholder="Leave a comment..."></textarea>
                <button type="submit">Submit</button>
            </form>
        {{else}}
            <p>You must be logged in to leave a comment.</p>
        {{/if}}
    </div>
</div>

<script src="./js/profile.js"></script>