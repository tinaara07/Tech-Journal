<div class="homepage">
    <h1>Welcome to Thech Journal</h1>
    
    <div class="journals">
        {{#each journals}}
            <div class="journal">
                <h2><a href="/journals/{{id}}">{{title}}</a></h2>
                <p>{{description}}</p>
                <p>Posted on {{date_created}} by {{user.name}} </p>
            </div>
        {{else}}
            <p>No tech journal available.</p>
        {{/each}}
    </div>
</div>
